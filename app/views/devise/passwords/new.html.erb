<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "form-signin", method: :post }) do |f| %>
  <%= devise_error_messages! %>
<h2 class="text-center">Forgot your password?</h2>
  <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email", input_html: {class: "form-control"} %>
  <%= f.button :submit, "Submit", class: "btn btn-primary btn-block" %>
  <%= render "devise/shared/links" %>
<% end %>


